<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="SpashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimaryDark">@color/bar</item>
    </style>
    <style name="BarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/bar</item>
        <item name="colorPrimary">@color/green</item>
    </style>
    <style name="SpashScreen.Popup" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/bar</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- Homepage toolbar style-->
    <style name="HomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Appbar" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/latobold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

</resources>